<html>
    <head>
        <meta charset="UTF-8">
        <title></title>
    </head>
    <body>
        
        {% if not error is empty %}
            <p><b><i>{{ error }}</i></b></p>
        {% endif %}
        
        <form method="post">
            Input your message: <input name="message" type="text">
            <input type="submit" value="Shout">
        </form>
        
        {% for message in messageList %}
            <p>* {{ message }}</p>
        {% else %}
            <p><i>No shouts yet.</i></p>
        {% endfor %}
        
        
    </body>
</html>
